<div class="container">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h1>Sign up</h1>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, required: true, class: 'form-control', placeholder: 'Citizen Jane' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: true, placeholder: 'citizen.jane@example.com' %>
    </div>

    <div class="form-group">
      <%= f.label :phone %>
      <%= f.number_field :phone, class: 'form-control', required: true, placeholder: '0452175637' %>
    </div>

    <div class="form-group">
      <%= f.label :address, 'Home address' %>
      <%= f.text_field :address, required: true, class: 'form-control', placeholder: '444 Doepel Dr, Docklands, VIC' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>

    <%= f.submit 'Sign up', :class => 'btn btn-primary btn-block' %>
  <% end %>
  <br>
</div>



