<div class="main">
  <section class="signup">

    <div class="container">

      <div class="signup-content">
        <h1 class="text-center">Create account</h1>
        <br>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, autofocus: true, required: true, class: 'form-control border border-info', placeholder: '' %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control border border-info', required: true, placeholder: '' %>
          </div>

          <div class="form-group">
            <%= f.label :phone %>
            <%= f.number_field :phone, class: 'form-control border border-info', required: true, placeholder: '' %>
          </div>

          <div class="form-group">
            <%= f.label :address, 'Home address' %>
            <%= f.text_field :address, required: true, class: 'form-control border border-info', placeholder: '' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control border border-info', required: true ,placeholder: ''%>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: 'form-control border border-info', required: true ,placeholder: ''%>
          </div>

          <%= f.submit 'Sign up', :class=>"form-submit" %>
        <% end %>
      </div>
    </div>
  </section>
</div>