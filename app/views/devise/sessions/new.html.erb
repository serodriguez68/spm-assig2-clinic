<div class="main">
    <section class="signup">

        <div class="container">
            <div class="signup-content">
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
                    <h1>Sign In</h1>
                    <%= devise_error_messages! %>

                        <div class="form-group">
                            <%= f.label :email %>
                                <%= f.email_field :email, :autofocus => true, class: 'form-control border border-info' %>
                                    <%- if devise_mapping.registerable? %>
                                        <small class="form-text text-muted">
          Don't have an account yet?
          <%= link_to 'Sign up', new_registration_path(resource_name) %>
        </small>
                                        <% end -%>
                        </div>

                        <div class="form-group">
                            <%= f.label :password %>
                                <%= f.password_field :password, class: 'form-control border border-info' %>
                                    <%- if devise_mapping.recoverable? %>
                                        <small class="form-text text-muted">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'right' %>
        </small>
                                        <% end -%>
                        </div>

                        <% if devise_mapping.rememberable? -%>
                            <div class="checkbox" style="width:150px">
                                <label>
                                    <%= f.check_box :remember_me %> Remember me
                                </label>
                            </div>
                            <% end -%>

                                <%= f.submit 'Sign in', :class => 'form-submit btn-lg btn-block' %>
                                    <% end %>
            </div>

        </div>
    </section>
</div>