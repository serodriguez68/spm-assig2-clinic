<div class="jumbotron jumbotron-fluid">
  <div class="container">

    <h1 class="display-4">
      <%= "Welcome #{current_user.name.titleize}!" %>
    </h1>
    <p class="lead">What do you want to do today?</p>

    <% if policy(Appointment).new? %>
      <%= link_to 'Book a New Appointment', new_appointment_path, class: 'btn btn-primary btn-lg btn-block' %>
    <% end %>

    <% if policy(Appointment).my? %>
      <%= link_to 'View or Cancel my Appointments', my_appointments_path, class: 'btn btn-primary btn-lg btn-block' %>
    <% end %>

    <% if policy(User).edit? %>
      <%= link_to 'Edit my Profile', edit_user_registration_path, class: 'btn btn-primary btn-lg btn-block' %>
    <% end %>


  </div>
</div>